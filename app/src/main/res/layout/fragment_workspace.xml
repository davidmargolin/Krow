<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/infocard"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="20sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="4dp"
                    android:layout_gravity="end|center_vertical"
                    android:gravity="end|center_vertical">

                    <TextView
                        android:id="@+id/rating"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd" />

                    <TextView
                        android:id="@+id/numrated"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:textAlignment="textEnd" />

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:textSize="16sp"
                android:maxLines="2"
                android:text="address"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="description" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginHorizontal="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"

            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginVertical="18dp"
                android:layout_height="48dp">
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_wifi"
                    android:text="Fast Wifi"
                    android:id="@+id/wifi"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_power"
                    android:text="Few Outlets"
                    android:id="@+id/outlets"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/ic_action_restaurant_menu"
                    android:text="Food Available"
                    android:id="@+id/food"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_action_volume_up"
                    android:text="Loud"
                    android:id="@+id/volume"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_action_bathroom"
                    android:text="Bathroom"
                    android:id="@+id/bathroom"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
                <Button
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/ic_seat_legroom_reduced_grey600_24dp"
                    android:text="Cozy Seating"
                    android:id="@+id/seats"
                    android:textAllCaps="false"
                    android:background="@android:color/transparent"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/extracard"
        android:layout_marginHorizontal="8dp"
        android:layout_marginBottom="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/rate"
                android:layout_width="wrap_content"
                android:background="@android:color/transparent"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Tell Us Your Experience" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
